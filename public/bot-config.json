        "allow_negative": false
      },
      "trivia_answer": {
        "min": 0,
        "max": 3,
        "allow_decimals": false,
        "allow_negative": false
      },
      "level": {
        "min": 1,
        "max": 1000,
        "allow_decimals": false,
        "allow_negative": false
      },
      "count": {
        "min": 0,
        "max": 1000000,
        "allow_decimals": false,
        "allow_negative": false
      }
    },
    "enum_validation": {
      "media_type": {
        "allowed_values": ["films", "music", "games"],
        "case_sensitive": false
      },
      "category": {
        "allowed_values": ["general", "films", "music", "games"],
        "case_sensitive": false
      },
      "difficulty": {
        "allowed_values": ["easy", "medium", "hard"],
        "case_sensitive": false
      }
    },
    "malicious_content": {
      "enable_detection": true,
      "patterns": [
        "<script",
        "javascript:",
        "on\\w+\\s*=",
        "data:text\\/html",
        "vbscript:",
        "<iframe",
        "<object",
        "<embed",
        "<link",
        "<meta"
      ],
      "action": "remove",
      "log_attempts": true,
      "notify_admins": false
    },
    "rate_limiting": {
      "enable": false,
